<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00141414"
    tools:context=".pantallaconsejos">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="222dp"
        android:layout_height="32dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/ecobamboofun"
        android:text="Comunidad"
        android:textAlignment="center"
        android:textSize="40sp"
        tools:layout_editor_absoluteX="94dp"
        tools:layout_editor_absoluteY="50dp" />

    <ScrollView
        android:layout_width="412dp"
        android:layout_height="563dp"
        app:layout_constraintStart_toBottonOf="@+id/imageView2"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="96dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView2"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#141414"
                android:layout_marginVertical="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/imageView14"
                    android:layout_width="389dp"
                    android:layout_height="282dp"
                    android:src="@drawable/random" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#141414"
                android:layout_marginVertical="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/imageView14"
                    android:layout_width="368dp"
                    android:layout_height="282dp"
                    android:src="@drawable/julio" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="273dp"
                android:background="#141414"
                android:layout_marginVertical="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="273dp"
                    android:background="#141414"
                    android:layout_marginVertical="30dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/imageView14"
                        android:layout_width="match_parent"
                        android:layout_height="289dp"
                        android:src="@drawable/tierra2" />

                </androidx.cardview.widget.CardView>

                <ImageView
                    android:id="@+id/imageView14"
                    android:layout_width="match_parent"
                    android:layout_height="289dp"
                    android:src="@drawable/tierra2" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_alignParentStart="true"
        android:background="#03F701"
        app:srcCompat="@drawable/colorverde" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="143dp"
        android:layout_height="36dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/ecobamboofun"
        android:text="Eco"
        android:textAlignment="center"
        android:textSize="40sp"
        tools:layout_editor_absoluteX="134dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/Hojas" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/usuario"
        tools:layout_editor_absoluteX="361dp"
        tools:layout_editor_absoluteY="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>